<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Switch
            android:id="@+id/swPhotogrammetryLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photogrammetry lock (manual exposure)"/>

        <Switch
            android:id="@+id/swTorch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Torch (continuous light)"/>

        <TextView
            android:text="Video FPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spVideoFps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvShutterLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max video shutter —"
            android:textStyle="bold"
            android:paddingTop="4dp"/>

        <TextView
            android:text="Shutter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <SeekBar
            android:id="@+id/sbShutter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"/>

        <TextView
            android:text="ISO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <SeekBar
            android:id="@+id/sbIso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"/>

        <TextView
            android:id="@+id/tvFocusDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus: —"
            android:textStyle="bold"/>

        <SeekBar
            android:id="@+id/sbFocus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"/>

        <Button
            android:id="@+id/btnPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Photo"/>

        <Button
            android:id="@+id/btnVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Video"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Calibration"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
